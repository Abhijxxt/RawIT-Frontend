generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model user {
  uid Int @id @default(autoincrement())
  first_name String @db.VarChar(30)
  middle_name String? @db.VarChar(30)
  last_name String @db.VarChar(30)
  email String @unique @db.VarChar(100)
  password String @db.VarChar(255)
  phone_number String @db.VarChar(15)
  created_at DateTime @default(now()) @db.Timestamp(6)
  updated_at DateTime @default(now()) @updatedAt @db.Timestamp(6)
  address String @db.VarChar(500)
}

model loginLogs {
  lid Int @id @default(autoincrement())
  pid Int @db.Int
  category String @db.VarChar(50)
  ip_address String @db.VarChar(50)
  location String @db.VarChar(100)
  login_at DateTime @default(now()) @db.Timestamp(6)
}

model issues {
  iid Int @id @default(autoincrement())
  title String @db.VarChar(100)
  description String? @db.VarChar(500)
  status String @db.VarChar(50) @default("open")
  created_at DateTime @default(now()) @db.Timestamp(6)
  updated_at DateTime @default(now()) @updatedAt @db.Timestamp(6)
  person_id Int @db.Int
  category String @db.VarChar(10)
}